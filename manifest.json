{
  "manifest_version": 3,
  "name": "Mini Local Password Manager",
  "version": "1.0.0",
  "description": "Local-only password manager (AES-GCM, PBKDF2).",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://*/*"],
  "background": { "service_worker": "dist/bg.bundle.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": ["dist/content.bundle.js"],
    "run_at": "document_idle"
  }]
}
